{{#section 'css'}}
<link rel="stylesheet" href="/css/uploadtable1.css">
<link rel="stylesheet" href="/css/uploadtable2.css">
{{/section}}

{{#section 'js'}}
<script src="https://code.jquery.com/jquery-3.3.1.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/dataTables.bootstrap4.min.js"></script>
<script>
    $(document).ready(function () {
        $('#table').DataTable();
    });
</script>
{{/section}}

{{#section 'customCate'}}
<h2>Chức năng</h2>
<div class="list-group list-group-flush">
    <a href="/account/post" class="list-group-item list-group-item-action ">Đăng phòng</a>
    <a href="/account/uploadedroom" class="list-group-item list-group-item-action active">Danh sách phòng đã dăng</a>
    <a href="/account/rentedroom" class="list-group-item list-group-item-action ">Danh sách phòng được liên
        hệ</a>
</div>

{{/section}}

<div class="recommended_items">
    <div style="clear: both; margin-top: 10px;"></div>
    <h2 class="title text-center">Phòng đã đăng</h2>
    <div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
        <div class="card" style="margin:6px">
            <div class="card-body">

                <table id="table" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tên phòng</th>
                            <th scope="col">Mô tả</th>
                            <th scope="col">Quận</th>
                            <th scope="col">Trạng thái</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each dataroom}}
                        <tr>
                            <th scope="row">{{id}}</th>
                            <td>{{name}} </td>
                            <td>{{description}}</td>
                            <td>{{formatDistrict district_name}}</td>
                            <td>{{#formatStatus isrented}}{{this}}{{/formatStatus}}</td>
                            <td>edit</td>
                        </tr>
                        {{/each}}

                    </tbody>
                </table>



            </div>
        </div>
    </div>
</div>